---
import { download } from '@lib/utils'

type Props = {
  icon: string
  href: string
}

const { icon, href } = Astro.props

// Download the icon
await download(icon)
---

<a href={href} target="_blank" class="px-3 py-2 group rounded border flex gap-2 items-center border-neutral-200 dark:border-neutral-700 hover:bg-neutral-100 hover:dark:bg-neutral-800 blend w-14 h-14">
  <img src={`/${import.meta.env.ASTRO_BASE_PATH}${icon}`} alt="" width="30" class="m-auto">
</a>